<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.ex13.MainActivity">


    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:numColumns="4"
        android:layout_above="@+id/LayoutLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/LayoutLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:text="@string/btSortNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSortNumbers"
            android:onClick="sort"
            android:textSize="10sp"
            android:layout_weight="1" />

        <Button
            android:text="@string/btSortColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSortColors"
            android:onClick="sort"
            android:textSize="10sp"
            android:layout_weight="1"/>

        <Button
            android:text="@string/btShuffleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btShuffle"
            android:onClick="sort"
            android:textSize="10sp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
